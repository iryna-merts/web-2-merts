<div class="row">
	<div class="col-sm-3"></div>
	<div class="col-sm-6 col-md-6 col-md-offset-4 col-sm-offset-3">
		<p></p>
		<h1>{{#if id}}Edit{{else}}Input{{/if}} book info:</h1>		
		<form action="{{#if id}}/edit/{{id}}{{else}}/add{{/if}}" method="post" id="change-info-form">
			<div class="row">
				<div class="col-sm-12">
					<div class="form-group">
						<label for="img">Image source</label>
						<input type="text" id="img" value="{{imagePath}}" name="img" class="form-control" required>
					</div>
				</div>
				<div class="col-sm-12">
					<div class="form-group">
						<label for="title">Book title</label>
						<input type="text" id="title" value="{{bookTitle}}" name="title" class="form-control" required>
					</div>
				</div>
				<div class="col-sm-12">
					<div class="form-group">
						<label for="author">Author</label>
						<input type="text" id="author" value="{{author}}" name="author" class="form-control" required>
					</div>
				</div>
				<div class="col-sm-12">
					<div class="form-group">
						<label for="description">Description</label>
						<textarea type="text" id="description" name="description" class="form-control" required>{{description}}</textarea>
					</div>
				</div>
				<div class="col-sm-12">
					<div class="form-group">
						<label for="price">Price</label>
						<input type="number" min="1" max="999" id="price" step="0.01" value="{{price}}" name="price" class="form-control" required>
					</div>
				</div>
			</div>
			<button type="submit" class="btn btn-success">Save changes</button>
		</form>
	</div>
</div>